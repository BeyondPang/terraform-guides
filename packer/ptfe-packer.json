{
  "variables": {
    "version": "",
    "memory" : "8192",
    "cpucorecount": "8"
  },
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "curl https://install.terraform.io/ptfe/stable > install_ptfe.sh",
        "chmod 500 install_ptfe.sh",
      "sudo ./install_ptfe.sh no-proxy bypass-storagedriver-warnings"
      ]
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "I<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.conf<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 81920,
      "guest_os_type": "RedHat_64",
      "headless": true,
      "http_directory": "ks",
      "iso_url": "https://mirror.umd.edu/centos/7/isos/x86_64/CentOS-7-x86_64-Everything-1804.iso",
      "iso_checksum": "99723c8b87dcec21df8aed23de1eb810346d42cfd2a3fafafe70a68296053417",
      "iso_checksum_type": "sha256",
      "ssh_username": "root",
      "ssh_password": "captainamerica",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "sudo shutdown -P now",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "packer-ptfe-el7",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "8192"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "8"
          
        ]
      ]
    }
  ]
}

